{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <main class="container py-4">
        <h1 class="h3 mb-3">Catalogue boutique</h1>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <form method="get" class="row g-2 mb-4">
            <div class="col-12 col-md-4">
                <label class="form-label" for="profil">Profil</label>
                <select class="form-select" id="profil" name="profil">
                    <option value="">Tous</option>
                    <option value="teletravailleur" {{ filtres.profil == 'teletravailleur' ? 'selected' : '' }}>Télétravailleur</option>
                    <option value="public" {{ filtres.profil == 'public' ? 'selected' : '' }}>Public</option>
                </select>
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label" for="categorie">Catégorie</label>
                <input class="form-control" id="categorie" name="categorie" value="{{ filtres.categorie }}" placeholder="Bureau, chaise...">
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="dispo" name="dispo" value="1" {{ filtres.dispo ? 'checked' : '' }}>
                    <label class="form-check-label" for="dispo">Disponible</label>
                </div>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button class="btn btn-primary w-100" type="submit">Filtrer</button>
            </div>
        </form>

        <div class="row g-3">
            {% for item in catalogue %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card h-100">
                        <img src="{{ asset(item.produit.photoProduitPublicPath) }}" class="card-img-top" alt="{{ item.produit.libelle }}">
                        <div class="card-body d-flex flex-column">
                            <h2 class="h6 card-title">{{ item.produit.libelle }}</h2>
                            {% if item.produit.tagTeletravailleur %}
                                <span class="badge text-bg-info mb-2">Réservé Télétravailleur</span>
                            {% endif %}
                            <p class="small text-body-secondary mb-1">Étage {{ item.produit.etage }} — Porte {{ item.produit.porte }}</p>
                            <p class="fw-semibold mb-3">Stock disponible : {{ item.stockDisponible }}</p>

                            <form method="post" action="{{ path('cart_add') }}" class="mt-auto">
                                <input type="hidden" name="produitId" value="{{ item.produit.id }}">
                                <button class="btn btn-outline-primary w-100" type="submit" {{ item.stockDisponible < 1 ? 'disabled' : '' }}>
                                    Ajouter au panier
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-light border">Aucun produit trouvé.</div>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
