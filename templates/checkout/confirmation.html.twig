{% extends 'base.html.twig' %}

{% block title %}Confirmation commande{% endblock %}

{% block body %}
    <main class="container py-4">
        <h1 class="h3 mb-3">Confirmation</h1>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if commande %}
            {% set statutLabels = {
                'en_attente_validation': 'En attente de validation',
                'validee': 'Validée',
                'en_preparation': 'En préparation',
                'prete': 'Prête',
                'retiree': 'Retirée',
                'annulee': 'Annulée'
            } %}
            <div class="card">
                <div class="card-body">
                    <p class="mb-1">Statut : {{ statutLabels[commande.statut.value] ?? commande.statut.value }}</p>
                    <p class="mb-1">Nom : {{ commande.nom ?: '-' }}</p>
                    <p class="mb-1">Prénom : {{ commande.prenom ?: '-' }}</p>
                    <p class="mb-3">Numéro agent : {{ commande.numeroAgent ?: '-' }}</p>
                    <p class="mb-3">
                        Créneau :
                        {% if commande.creneau %}
                            {{ commande.creneau.dateHeure|date('d/m/Y') }} à {{ commande.creneau.heureDebut|date('H\\hi') }}
                        {% else %}
                            Aucun
                        {% endif %}
                    </p>
                    <h2 class="h6">Articles</h2>
                    <ul class="mb-0">
                        {% for ligne in commande.lignesCommande %}
                            <li>{{ ligne.produit.libelle }}</li>
                        {% else %}
                            <li>Aucun article</li>
                        {% endfor %}
                    </ul>
                    <form class="d-none" aria-hidden="true">
                        <input type="hidden" name="_token" value="{{ csrf_token('annuler_commande_' ~ commande.id) }}">
                    </form>
                </div>
            </div>
        {% else %}
            <div class="alert alert-light border">Aucune commande en session.</div>
        {% endif %}
    </main>
{% endblock %}
