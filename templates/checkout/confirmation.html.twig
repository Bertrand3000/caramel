{% extends 'base.html.twig' %}

{% block title %}Confirmation commande{% endblock %}

{% block body %}
    <main class="container py-4">
        <h1 class="h3 mb-3">Confirmation</h1>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if commande %}
            <div class="card">
                <div class="card-body">
                    <p class="mb-1"><strong>Commande #{{ commande.id }}</strong></p>
                    <p class="mb-1">Statut : {{ commande.statut.value }}</p>
                    <p class="mb-3">
                        Créneau :
                        {{ commande.creneau ? commande.creneau.heureDebut|date('d/m/Y H\\hi') : 'Aucun' }}
                    </p>
                    <h2 class="h6">Articles</h2>
                    <ul class="mb-0">
                        {% for ligne in commande.lignesCommande %}
                            <li>{{ ligne.produit.libelle }} × {{ ligne.quantite }}</li>
                        {% else %}
                            <li>Aucun article</li>
                        {% endfor %}
                    </ul>
                    <form method="post" action="{{ path('checkout_annuler', {id: commande.id}) }}" class="mt-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('annuler_commande_' ~ commande.id) }}">
                        <button class="btn btn-outline-danger" type="submit">Annuler la commande</button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="alert alert-light border">Aucune commande en session.</div>
        {% endif %}
    </main>
{% endblock %}
