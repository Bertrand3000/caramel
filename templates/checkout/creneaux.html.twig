{% extends 'base.html.twig' %}

{% block title %}Créneaux{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <main class="container py-4">
        <h1 class="h3 mb-3">Choisir un créneau</h1>

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <div class="list-group">
            {% for slot in creneaux %}
                <form method="post" action="{{ path('checkout_confirmer') }}" class="list-group-item">
                    <input type="hidden" name="creneauId" value="{{ slot.entity.id }}">
                    <div class="mb-2">
                        <label class="form-label" for="numeroAgent-{{ slot.entity.id }}">Numero agent</label>
                        <input class="form-control" id="numeroAgent-{{ slot.entity.id }}" type="text" name="numeroAgent" inputmode="numeric" pattern="\d{5}" maxlength="5" required>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>{{ slot.entity.heureDebut|date('H\\hi') }} — {{ slot.used }}/{{ slot.entity.capaciteMax }} places</span>
                        <button class="btn btn-sm btn-primary" type="submit">Sélectionner</button>
                    </div>
                    <div class="progress" role="progressbar" aria-valuenow="{{ slot.percent }}" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: {{ slot.percent }}%"></div>
                    </div>
                </form>
            {% else %}
                <div class="alert alert-light border">Aucun créneau disponible.</div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
