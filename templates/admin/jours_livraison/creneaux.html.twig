{% extends 'base.html.twig' %}

{% block title %}Admin - Créneaux {{ jour.date|date('d/m/Y') }}{% endblock %}

{% block body %}
<main class="container py-4">
    <section class="form-shell dmax-list-shell">
        <header class="dmax-list-head">
            <div>
                <h1>Créneaux du {{ jour.date|date('d/m/Y') }}</h1>
                <p class="dmax-list-meta mb-0">
                    Occupation globale: {{ stats.used }}/{{ stats.capacity }} places ({{ stats.percent }}%)
                </p>
            </div>
            <div class="dmax-actions">
                <a class="btn btn-outline-secondary btn-sm" href="{{ path('admin_jours_livraison_index') }}">Retour à la liste</a>
                <form method="post" action="{{ path('admin_jours_livraison_generer', {id: jour.id}) }}" onsubmit="return confirm('Régénérer les créneaux de cette journée ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('generer_jour_livraison_' ~ jour.id) }}">
                    <button class="btn btn-primary btn-sm" type="submit">Régénérer les créneaux</button>
                </form>
            </div>
        </header>

        {% set totalSlots = creneaux|length %}
        {% set slotsFree = 0 %}
        {% set slotsBusy = 0 %}
        {% set slotsFull = 0 %}
        {% set commandesCount = 0 %}
        {% for creneau in creneaux %}
            {% set used = creneau.capaciteUtilisee %}
            {% set max = creneau.capaciteMax %}
            {% set commandesCount = commandesCount + creneau.commandes|length %}
            {% if max > 0 and used >= max %}
                {% set slotsFull = slotsFull + 1 %}
            {% elseif used > 0 %}
                {% set slotsBusy = slotsBusy + 1 %}
            {% else %}
                {% set slotsFree = slotsFree + 1 %}
            {% endif %}
        {% endfor %}

        <div class="row mb-2">
            <div class="col-sm-6 col-lg-4">
                <article class="card h-100">
                    <div class="card-body">
                        <p class="small text-body-secondary mb-1">Créneaux</p>
                        <p class="h3 mb-0">{{ totalSlots }}</p>
                    </div>
                </article>
            </div>
            <div class="col-sm-6 col-lg-4">
                <article class="card h-100">
                    <div class="card-body">
                        <p class="small text-body-secondary mb-1">Commandes sur la journée</p>
                        <p class="h3 mb-0">{{ commandesCount }}</p>
                    </div>
                </article>
            </div>
            <div class="col-sm-6 col-lg-4">
                <article class="card h-100">
                    <div class="card-body">
                        <p class="small text-body-secondary mb-1">État des créneaux</p>
                        <p class="mb-1">
                            <span class="badge text-bg-success">Libres: {{ slotsFree }}</span>
                            <span class="badge" style="background:#fef3c7;color:#92400e;">En charge: {{ slotsBusy }}</span>
                            <span class="badge text-bg-danger">Complets: {{ slotsFull }}</span>
                        </p>
                    </div>
                </article>
            </div>
        </div>

        {% if creneaux is empty %}
            <div class="alert alert-light border">Aucun créneau pour cette journée.</div>
        {% else %}
            <div class="dmax-table-wrap">
                <table class="dmax-table">
                    <thead>
                        <tr>
                            <th>Créneau</th>
                            <th>Capacité</th>
                            <th>Progression</th>
                            <th>Réservations</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for creneau in creneaux %}
                            {% set used = creneau.capaciteUtilisee %}
                            {% set max = creneau.capaciteMax %}
                            {% set percent = max > 0 ? ((used / max) * 100)|round : 0 %}
                            <tr>
                                <td>
                                    <p class="fw-semibold mb-0">{{ creneau.heureDebut|date('H:i') }} - {{ creneau.heureFin|date('H:i') }}</p>
                                </td>
                                <td>{{ used }}/{{ max }}</td>
                                <td>
                                    <p class="mb-1">
                                        {% if percent >= 100 %}
                                            <span class="badge text-bg-danger">Complet</span>
                                        {% elseif percent >= 50 %}
                                            <span class="badge" style="background:#fef3c7;color:#92400e;">En charge</span>
                                        {% else %}
                                            <span class="badge text-bg-success">Disponible</span>
                                        {% endif %}
                                        {{ percent }}%
                                    </p>
                                    <div class="progress" role="progressbar" aria-valuenow="{{ percent }}" aria-valuemin="0" aria-valuemax="100">
                                        <div class="progress-bar" style="width: {{ percent }}%; {% if percent >= 100 %}background:#dc2626;{% elseif percent >= 50 %}background:#d97706;{% endif %}"></div>
                                    </div>
                                </td>
                                <td>
                                    {% if creneau.commandes|length > 0 %}
                                        <ul class="mb-0" style="padding-left:1rem;">
                                            {% for commande in creneau.commandes %}
                                                <li class="mb-1">
                                                    <span class="fw-semibold">{{ commande.numeroAgent ?: 'Sans numéro' }}</span>
                                                    - {{ commande.nom ?: 'Nom inconnu' }} {{ commande.prenom ?: '' }}
                                                    <span class="text-body-secondary">({{ commande.statut.value }})</span>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <span class="text-body-secondary">Aucune réservation</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if creneau.commandes|length > 0 %}
                                        <div class="dmax-actions">
                                            {% for commande in creneau.commandes %}
                                                <form method="post" action="{{ path('admin_jours_livraison_annuler_reservation', {id: jour.id, creneauId: creneau.id, commandeId: commande.id}) }}" onsubmit="return confirm('Annuler cette commande ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('admin_annuler_commande_' ~ commande.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger" type="submit">Annuler #{{ commande.id }}</button>
                                                </form>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <span class="text-body-secondary">-</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </section>
</main>
{% endblock %}
