{% extends 'base.html.twig' %}
{% block title %}Administration{% endblock %}
{% block body %}
<div style="max-width:700px;margin:0 auto;padding:1rem;display:grid;gap:2rem;">
    <section>
        <h1>Paramètres boutique</h1>
        {{ form_start(form) }}
        <div style="display:grid;gap:.75rem;">{{ form_widget(form) }}</div>
        <button style="margin-top:1rem;min-height:44px;padding:12px 16px;">Sauvegarder</button>
        {{ form_end(form) }}
    </section>

    <section>
        <h2>Import télétravailleurs</h2>
        {{ form_start(importForm, {action: path('admin_import_teletravailleurs')}) }}
        <div style="display:grid;gap:.75rem;">{{ form_widget(importForm) }}</div>
        <button style="margin-top:1rem;min-height:44px;padding:12px 16px;">Importer CSV</button>
        {{ form_end(importForm) }}
    </section>

    <section>
        <h2>Exports CDC §13</h2>
        <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(180px,1fr));gap:.75rem;">
            <a href="{{ path('admin_export_ventes', {format: 'csv'}) }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Ventes (CSV)</a>
            <a href="{{ path('admin_export_ventes', {format: 'xls'}) }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Ventes (Excel)</a>
            <a href="{{ path('admin_export_stock_restant', {format: 'csv'}) }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Stock restant (CSV)</a>
            <a href="{{ path('admin_export_stock_restant', {format: 'xls'}) }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Stock restant (Excel)</a>
            <a href="{{ path('admin_export_comptabilite', {format: 'csv'}) }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Comptabilité (CSV)</a>
            <a href="{{ path('admin_export_comptabilite', {format: 'xls'}) }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Comptabilité (Excel)</a>
        </div>
    </section>

    <section>
        <h2>Journées de livraison</h2>
        <a href="{{ path('admin_jours_livraison_index') }}" style="display:inline-block;padding:12px 16px;border:1px solid #ddd;text-decoration:none;">Administrer les journées</a>
    </section>
</div>
{% endblock %}
