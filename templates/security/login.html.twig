{% extends 'base.html.twig' %}
{% set hide_layout_header = true %}

{% block title %}Connexion — CARAMEL{% endblock %}
{% block body_class %}login-page{% endblock %}

{% block body %}
    <main class="login-screen" style="--login-bg-image: url('{{ asset('images/caramel.jpg') }}');">
        <div class="login-hero">
            <h1 class="login-hero-title">CARAMEL</h1>
            <p class="login-hero-subtitle">
                <span class="login-acrostic">C</span>ollecte
                <span class="login-acrostic">A</span>nti-gaspillage,
                <span class="login-acrostic">R</span>écupération,
                <span class="login-acrostic">A</span>meublement,
                <span class="login-acrostic">M</span>obilier,
                <span class="login-acrostic">E</span>nlèvements &
                <span class="login-acrostic">L</span>ogistique
            </p>
        </div>

        <section class="login-panel">
            <h2 class="login-panel-title">Connexion</h2>

            {% if error %}
                <div class="login-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" action="{{ path('login') }}" class="login-form">
                <div>
                    <label for="username" class="form-label">Identifiant</label>
                    <input
                        id="username"
                        type="text"
                        name="_username"
                        value="{{ last_username }}"
                        required
                        autofocus
                        class="form-control"
                    >
                </div>

                <div>
                    <label for="password" class="form-label">Mot de passe</label>
                    <input
                        id="password"
                        type="password"
                        name="_password"
                        required
                        class="form-control"
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-primary login-submit">Se connecter</button>
            </form>
        </section>

        <footer class="login-footer">
            <a href="{{ path('mentions_legales') }}">Mentions légales</a>
        </footer>
    </main>
{% endblock %}
